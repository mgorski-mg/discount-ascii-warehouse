<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.mgorski.discountasciiwarehouse.asciiitemlist.AsciiItemViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAsciiItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:text="@{viewModel.item.face}"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@{String.valueOf(viewModel.item.price)}"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBuySquare">
            <TextView
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/buy_now"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buy"
                android:layout_centerHorizontal="true"
                android:paddingBottom="4dp"
                android:text="@string/last_in_stock"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="@{viewModel.item.stock == 1 ? View.VISIBLE : View.GONE}"/>
        </RelativeLayout>
    </LinearLayout>
</layout>